          },
          {
            "in": "query",
            "name": "size",
            "description": "O número máximo de resultados a serem retornados por página",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/BarbeiroDTO"
                      }
                    },
                    "currentPage": {
                      "type": "integer",
                      "description": "O número da página atual",
                      "example": 1
                    },
                    "totalPages": {
                      "type": "integer",
                      "description": "O número total de páginas",
                      "example": 3
                    },
                    "totalItems": {
                      "type": "integer",
                      "description": "O número total de itens",
                      "example": 28
