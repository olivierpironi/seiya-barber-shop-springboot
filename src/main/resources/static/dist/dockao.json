                "schema": {
                  "$ref": "#/components/schemas/BarbeiroDTO"
                }
              }
            }
          },
          "400": {
            "description": "Campos de cadastro inválidos.",
            "content": {
              "application/json": {
                "example": "Campo 'nome' é inválido"
              }
            }
          }
        }
      },
      "get": {
        "summary": "Retorna uma lista paginada de todos os barbeiros ativos.",
